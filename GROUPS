#include <bits/stdc++.h>//KarmeshDuggar
using namespace std;
#define ll long long

int main() 
{
    cin.tie(NULL);
    ios::sync_with_stdio(false);
    int t;
    cin>>t;
    while(t--)
    {
    	string s;
    	cin>>s;
    	int flag=0,count=0;
    	for(int i=0;i<s.length();i++)
    	{
    		if(s[i]=='1'&&flag==0)
    		{
    			flag=1;count+=1;
			}
			else if(s[i]=='0')
			{
				flag=0;
			}
		}
		cout<<count<<"\n";
	}
    return 0;
}
