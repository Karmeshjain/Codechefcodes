#include <iostream> 
using namespace std;
long long sum(int n)
{
	long long sum=0;
	for(int i=n;i>=0;i--)
	{
		sum+=i;
	}
	return sum;
}
int main() 
{ 
int t;
cin>>t;
    while(t--)
    {
    	long long int d,n;
    	long long int a;
    	cin>>d>>n;a=n;
    	for(int i=0;i<d;i++)
    	{
    		a=sum(a);
		}
		cout<<a<<"\n";
    	
	}
    return 0; 
} 
